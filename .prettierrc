{
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "printWidth": 120,
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "svelteSortOrder": "options-scripts-markup-styles"
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "singleQuote": true
      }
    }
  ]
}
